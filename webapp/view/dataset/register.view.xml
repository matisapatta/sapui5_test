<form:Form editable="false" class="isReadonly">
			<form:title>
				<core:Title text="Por favor, elegir criterios de búsqueda para las facturas"/>
			</form:title>
			<form:layout>
				<form:ResponsiveGridLayout 
				columnsL="1" 
				columnsM="1"
				/>
			</form:layout>
			<form:formContainers>
				<form:FormContainer>
					<form:formElements>
						<form:FormElement label="Sociedad">
							<form:fields>
								<!-- <Text text="Pepe"/> -->
								<Select id="sociedad">
								<core:Item key="T001" text="T001"/>
								<core:Item key="T001" text="S001"/>
								<core:Item key="T001" text="S002"/>
								</Select>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Fecha desde">
							<form:fields>
							<DatePicker id="fechadesde"></DatePicker>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Fecha hasta">
							<form:fields>
							<DatePicker id="fechahasta"></DatePicker>
							</form:fields>
						</form:FormElement>
						<form:FormElement label="Pendiente de pago">
							<form:fields>
								<Checkbox/>
							</form:fields>
						</form:FormElement>
						<form:FormElement>
							<form:fields>
								<Button text="Buscar" type="Default" press="register" custom:input="idSelectDataset"/>
							</form:fields>
						</form:FormElement>
					</form:formElements>
				</form:FormContainer>
			</form:formContainers>
		</form:Form>





